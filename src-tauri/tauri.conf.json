{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Simon Desktop",
  "version": "0.3.0",
  "identifier": "com.yoshomay.simonDesktop",
  "build": {
    "frontendDist": "../src/"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Simon Desktop 0.3.0",
        "width": 800,
        "height": 600,
        "minWidth": 500,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
