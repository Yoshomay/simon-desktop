{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Simon Desktop",
  "version": "0.1.0",
  "identifier": "com.yoshomay.simonDesktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Simon Desktop 0.1.0",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {"sounds": "../src/sounds/"}
      }
    }
  }
}
